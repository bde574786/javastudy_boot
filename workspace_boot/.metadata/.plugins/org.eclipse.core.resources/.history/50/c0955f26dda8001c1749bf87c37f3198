package ch01;

public class DataType1 {

	public static void main(String[] args) {
		
		// 데이터 타입의 종료
		// 1. 기본 자료형(primitive data type) --> 기본 값
		// 2. 참조 타입(Reference Type) --> 주소 값
		
		// 정수형(1, 10, 500)
		// 크기가 다르다 (담을 수 있는 숫자의 크기가 제한되어 있다)
		byte b; // 1바이트 크기 (8bit)
		short s; // 2바이트 크기 (16bit)
		int i; // 4바이트 크기 (32bit)
		long l; // 8바이트 크기 (64bit)
		
		b = 127;
		
	}

}
