package ch04;

public class DoWhileTest {

	public static void main(String[] args) {
		
		/* <-- 여러 줄 주석
		while(조건식) {
			// 증감식
		}
		*/
		
		/*
		do {
			// 수행식
		} while(조건식) {
		*/

		int num = 1;
		int sum = 0;
	
		do {
			System.out.println("현재 값: " +  num);
			// sum = num + sum;
			sum += num;
			num++;
		} while(num <= 10);
	}
		
	
	
}

