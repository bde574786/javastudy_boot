package ch04;

public class IfMainTest {

	public static void main(String[] args) {
		// 제어문 if
		// 주어진 조건에 따라서 실행이 이루어지도록 구현
		// 만약... 이라면
		
		boolean flag = true;
		// if 문 단독
		if(flag) {
			System.out.println("조건식이 true이면 여기 구문이 실행됩니다.");
		} // end of if 
		
		//if else 문
		if(flag) {
			System.out.println("true 가 실행됩니다."); // 1
		}else {
			System.out.println("false 가 실행됩니다."); // 2
		}
		
	} 

}
