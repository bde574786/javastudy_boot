package ch05;

import java.util.Scanner;

public class InputUserInfoScanner {

	
	// 상태 ---> 멤버 변수
	Scanner scanner;
	InputUserInfoScanner userinfo;

	// 생성자 --> 기본생성자 (메모리에 올라갈 때 처음 실행 됩니다.)
	public InputUserInfoScanner() {
		System.out.println("사용자의 아이디를 입력하세요.");
		scanner = new Scanner(System.in);
		inputData(userinfo);
		printA();
		System.out.println("사용자 아이디 : ");
	}
	
	public InputUserInfoScanner inputData(InputUserInfoScanner userinfo) {
		
		return userinfo;
	}
	
	
	
	// 행위
	// 메서드를 만들어주세요
	public void  printA() {
		System.out.println("========사용자 입력========");
	}
}
